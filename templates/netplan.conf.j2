network:
  version: 2
  ethernets:
    {{ ansible_default_ipv4.interface }}:
      addresses: [{{ ansible_default_ipv4.address }}/24]
      routes:
        - to: 0.0.0.0/0
          via: {{ ansible_default_ipv4.gateway }}
      nameservers:
        addresses:
        {% for  dns_record in dns_hosts %}
          - {{ dns_record }}
        {% endfor %}
      dhcp4: false
      dhcp6: false
